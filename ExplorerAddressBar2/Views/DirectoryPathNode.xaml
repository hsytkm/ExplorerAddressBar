<UserControl x:Class="ExplorerAddressBar2.Views.DirectoryPathNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:v="clr-namespace:ExplorerAddressBar2.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Orientation="Horizontal" >
        <!--  -->
        <TextBlock Text="{Binding DirectoryName.Value, Mode=OneWay}" />

        <ComboBox ItemsSource="{Binding ChildDirectoryItems.Value, Mode=OneWay}"
                  SelectedValue="{Binding SelectedDirectory.Value, Mode=TwoWay}"
                  IsEnabled="{Binding HasChildDirectory.Value, Mode=OneWay}" >
            
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name, Mode=OneWay}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ComboBox>

    </StackPanel>
</UserControl>
